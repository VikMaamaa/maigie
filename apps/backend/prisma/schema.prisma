// Prisma schema for Maigie backend
// apps/backend/prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

// --- Base Schema ---

enum Tier {
  FREE
  PREMIUM_MONTHLY
  PREMIUM_YEARLY
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  passwordHash  String?
  name          String?
  provider      String?  // for oauth (google/github)
  providerId    String?
  tier          Tier     @default(FREE)
  timezone      String?
  preferences   Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
